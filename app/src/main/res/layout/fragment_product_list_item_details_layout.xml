<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/productImage"
        style="@style/ProductListItemImage.Big"
        android:layout_marginTop="@dimen/product_list_item_details_image_top_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productTitle"
        style="@style/ProductListItemBaseText.22"
        android:layout_marginTop="@dimen/product_list_base_item_top_margin_x2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productImage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productDescription"
        style="@style/ProductListItemBaseText.16"
        android:layout_marginStart="@dimen/product_list_base_item_start_margin"
        android:layout_marginTop="@dimen/product_list_base_item_top_margin_x2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productTitle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productPrice"
        style="@style/ProductListItemBaseText.16"
        android:layout_marginStart="@dimen/product_list_base_item_start_margin"
        android:layout_marginTop="@dimen/product_list_base_item_top_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDescription" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productDiscountPercentage"
        style="@style/ProductListItemBaseText.16"
        android:layout_marginStart="@dimen/product_list_base_item_start_margin"
        android:layout_marginTop="@dimen/product_list_base_item_top_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productPrice" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productRating"
        style="@style/ProductListItemBaseText.16"
        android:layout_marginStart="@dimen/product_list_base_item_start_margin"
        android:layout_marginTop="@dimen/product_list_base_item_top_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDiscountPercentage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productStock"
        style="@style/ProductListItemBaseText.16"
        android:layout_marginStart="@dimen/product_list_base_item_start_margin"
        android:layout_marginTop="@dimen/product_list_base_item_top_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productRating" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productBrand"
        style="@style/ProductListItemBaseText.16"
        android:layout_marginStart="@dimen/product_list_base_item_start_margin"
        android:layout_marginTop="@dimen/product_list_base_item_top_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productStock" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productCategory"
        style="@style/ProductListItemBaseText.16"
        android:layout_marginStart="@dimen/product_list_base_item_start_margin"
        android:layout_marginTop="@dimen/product_list_base_item_top_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productBrand" />

</androidx.constraintlayout.widget.ConstraintLayout>
